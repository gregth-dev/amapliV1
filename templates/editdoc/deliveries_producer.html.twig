{% extends 'base.html.twig' %}

{% block title %}
	{{ parent() }}Liste des livraisons
{% endblock %}

{% block body %}
	<h1 class="text-center mt-5 mb-5 title-effect h2">Edition des livraisons</h1>
	{{ form_start(form) }}
	<h5 class="mt-3">Choisissez une p√©riode :</h5>
	<div class="row align-items-center">
		<div class="col-3">
			{{ form_row(form.orientation) }}
		</div>
		<div class="col-3">
			{{ form_row(form.startDate) }}
		</div>
		<div class="col-3">
			{{ form_row(form.endDate) }}
		</div>
		<div class="col-2 form-group">
			<button type="submit" class="btn {{ button_class|default('btn-outline-primary') }} my-4">
				<i class="fas fa-print fa-2x"></i>
			</button>
		</div>
	</div>

	{{ form_end(form) }}

{% endblock %}
