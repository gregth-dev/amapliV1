{% extends 'base.html.twig' %}

{% block title %}
	{{ parent() }}Mes paiements
{% endblock %}

{% block body %}
	<a href="{{ path('contract_member_index') }}">
		<i class="far fa-arrow-alt-circle-left mt-5"></i>
		Retour à la liste des contrats</a>
	<h1 class="text-center mt-5 mb-5 title-effect">Mes paiements</h1>
	<h2 class="h4">{{contractMember.contract.name}}</h2>
	<table class="table table-hover">
		<thead>
			<tr>
				<th>N°</th>
				<th>Numéro de chèque</th>
				<th>Montant</th>
				<th>date de dépôt</th>
				<th>Statut</th>
			</tr>
		</thead>
		<tbody>
			{% for payment in pagination.data %}
				<tr>
					<td>{{ payment.id }}</td>
					<td>{{ payment.checkNumber }}</td>
					<td>{{ payment.amount|number_format(2, ',', ' ') }}
						€</td>
					<td>{{ payment.depositDate|date("d/m/Y") }}</td>
					<td>{{ payment.status }}</td>
				</tr>
			{% else %}
				<tr>
					<td colspan="4">Aucun paiement enregistré</td>
				</tr>
			{% endfor %}
		</tbody>
	</table>
	{{pagination.render(contractMember.id)}}
{% endblock %}
