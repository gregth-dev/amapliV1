{% extends 'base.html.twig' %}

{% block title %}
	{{ parent() }}Les référents
{% endblock %}

{% block body %}
	<h1 class="text-center mt-5 mb-5 title-effect">Les référents</h1>

	<table class="table table-hover">
		<thead>
			<tr>
				<th>Nom</th>
				<th>Prenom</th>
				<th>Contrat</th>
			</tr>
		</thead>
		<tbody>
			{% for user in pagination.data %}
				<tr>
					<td>{{ user.firstName }}</td>
					<td>{{ user.lastName }}</td>
					<td>
						{% for producer in user.producersReferent %}
							{% for contract in producer.contracts %}
								{% if contract.status == 'actif' %}
									{{contract.fullName|capitalize}}
								{% endif %}
							{% endfor %}
							<br>
						{% endfor %}
					</td>
				</tr>
			{% endfor %}
		</tbody>
	</table>
	{{pagination.render()}}
{% endblock %}
