<div class="d-flex justify-content-center">
	<ul class="pagination">
		<li class="page-item {% if page <= 1 %}disabled{% endif %}">
			<a class="page-link" href="{{path(route, {page:page-1, id:id})}}">&laquo;</a>

		</li>
		{% for i in 1..pages %}
			{% if i > 0 %}
				<li class="page-item {% if page == i %}active{% endif %}">
					<a class="page-link" href="{{path(route, {page:i, id:id})}}">{{i}}</a>
				</li>
			{% endif %}
		{% endfor %}
		<li class="page-item {% if page == pages %}disabled{% endif %}">
			<a class="page-link" href="{{path(route, {page:page+1, id:id})}}">&raquo;</a>

		</li>
	</ul>
</div>
