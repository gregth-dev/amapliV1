{% block _contract_deliveries_widget %}
	<p>Date de distribution :</p>
	{{ form_widget(form) }}
	<div class="form-group">
		<button type="button" id="add-delivery" class="btn btn-outline-primary">
			<i class="fas fa-plus-circle"></i>
			Ajouter une date de distribution
		</button>
	</div>
{% endblock %}

{% block _contract_deliveries_entry_widget %}
	<div class="form-group" id="block_{{id}}">
		<div class="row">
			<div class="col-3">
				{{ form_widget(form.date) }}
				{{ form_errors(form.date) }}
			</div>
			<div class="col-3">
				{{ form_widget(form.status) }}
				{{ form_errors(form.status) }}
			</div>
			<div class="col-1">
				<button type="button" data-action="delete" data-target="#block_{{id}}" class="btn btn-outline-danger">
					<i class="far fa-trash-alt"></i>
				</button>
			</div>
		</div>
	</div>
{% endblock %}
