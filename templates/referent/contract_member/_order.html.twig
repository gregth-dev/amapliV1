{% block _contract_member2_orders_widget %}
	{{ form_widget(form) }}
	<div class="form-group">
		<button type="button" id="add-order" class="btn btn-outline-primary">
			<i class="fas fa-plus"></i>
			Ajouter une commande
		</button>
	</div>
{% endblock %}

{% block _contract_member2_orders_entry_widget %}
	<div class="form-group" id="block_{{id}}">
		<div class="row">
			<div class="col-10">
				<div class="row">
					<div class="col">
						{{ form_widget(form.product) }}
						{{ form_errors(form.product) }}
					</div>
					<div class="col">
						{{ form_widget(form.quantity) }}
						{{ form_errors(form.quantity) }}
					</div>
				</div>
			</div>
			<div class="col-2">
				<button type="button" data-action="delete" data-target="#block_{{id}}" class="btn btn-outline-danger">
					<i class="far fa-trash-alt"></i>
				</button>
			</div>
		</div>
		<div class="row mt-4">
			{% for livraison in form.deliveries %}
				<div class="col-2">
					{{ form_row(livraison) }}

				</div>
			{% endfor %}
			{{ form_errors(form.deliveries) }}
		</div>
	</div>
{% endblock %}
