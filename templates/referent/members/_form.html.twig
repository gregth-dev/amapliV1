{{ form_start(form) }}
<div class="row">
	<div class="col-4">
		{{ form_row(form.lastName) }}
	</div>
	<div class="col-4">
		{{ form_row(form.firstName) }}
	</div>
	<div class="col-4">
		{{ form_row(form.email) }}
	</div>
</div>
<div class="row">
	<div class="col-6">
		{{ form_row(form.address) }}
	</div>
	<div class="col-3">
		{{ form_row(form.postcode) }}
	</div>
	<div class="col-3">
		{{ form_row(form.city) }}
	</div>
</div>
<div class="row">
	<div class="col-4">
		{{ form_row(form.phone1) }}
	</div>
	<div class="col-4">
		{{ form_row(form.phone2) }}
	</div>
	<div class="col-4">
		{{ form_row(form.email2) }}
	</div>
</div>
<div class="row">
	<div class="col-4">
		<ul>
			<li>Type de compte actuel :
				{{user.memberType}}</li>
		</ul>
	</div>
</div>
<div class="row d-flex justify-content-between mt-2">
	<div class="col-4">
		<button type="submit" class="btn {{ button_class|default('btn-outline-primary') }} my-2">
			<i class="far fa-save"></i>
			{{ button_label|default('Enregistrer le compte') }}
		</button>
	</div>
</div>
{{ form_end(form) }}
